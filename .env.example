# Server configuration
PORT=3000

# Northdata credentials
NORTHDATA_USERNAME=your_username
NORTHDATA_PASSWORD=your_password

# Scraper configuration
BROWSER_TIMEOUT=30000
REQUEST_DELAY=2000
MAX_RETRIES=3
BROWSER_HEADLESS=true # Set to 'false' for debug mode with visible browser window

# Human-like behavior settings
TYPING_DELAY_MIN=50 # Minimum delay between keystrokes in ms
TYPING_DELAY_MAX=150 # Maximum delay between keystrokes in ms
WAIT_FOR_NETWORK_IDLE=true # Wait for network to be idle after navigation
NETWORK_IDLE_TIMEOUT=1000 # Time in ms to wait for no network activity
